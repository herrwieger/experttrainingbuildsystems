<?xml version="1.0" encoding="UTF-8"?>

<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:jboss:bean-deployer bean-deployer_1_0.xsd"
            xmlns="urn:jboss:bean-deployer">
            

  <bean name="dialogDatasourceBootstrap"  class="${jboss.datasource.class}">
    <property name="driverClass">${jdbc.driverClass}</property>
    <property name="connectionUrl">${jdbc.url}</property>
    <property name="userName"><value class="java.lang.String">${jdbc.username}</value></property>
    <property name="password"><value class="java.lang.String">${jdbc.password}</value></property>
    <property name="jndiName">java:/dialogDatasource</property>
    <property name="minSize">0</property>
    <property name="maxSize">10</property>
    <property name="blockingTimeout">1000</property>
    <property name="idleTimeout">100000</property>
    <property name="transactionManager">
      <inject bean="TransactionManager"/>
    </property>
  </bean>

  <bean name="dialogDatasource" class="java.lang.Object">
    <constructor factoryMethod="getDataSource">
      <factory bean="dialogDatasourceBootstrap"/>
    </constructor>
  </bean>


</deployment>